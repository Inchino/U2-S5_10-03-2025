@model EditLibroViewModel

@{
    ViewData["Title"] = "Edit book";
}

<h2>Modifica Libro</h2>
<form method="post" action="/Libri/Edit">
    <input type="hidden" asp-for="Id" />

    <label>Titolo:</label>
    <input type="text" asp-for="Titolo" required />

    <label>Autore:</label>
    <input type="text" asp-for="Autore" required />

    <label>Genere:</label>
    <input type="text" asp-for="Genere" required />

    <label>Descrizione:</label>
    <textarea asp-for="Descrizione"></textarea>

    <label>Prezzo:</label>
    <input type="number" asp-for="Prezzo" step="0.01" required />

    <label>Disponibile:</label>
    <input type="checkbox" asp-for="Disponibile" />

    <button type="submit">Salva</button>
</form>
<a href="/Libri">Torna alla lista</a>