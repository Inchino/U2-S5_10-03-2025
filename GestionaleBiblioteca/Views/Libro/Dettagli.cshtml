@model LibroDettagliViewModel

@{
    ViewData["Title"] = "Book details";
}

<table>
    <thead>
        <th>Name</th>
        <th>Author</th>
        <th>Description</th>
        <th>Price</th>
        <th>Category</th>
        <th>Actions</th>
    </thead>
    <tbody>
        <tr>
            <td>@Model.Name</td>
            <td>@Model.Author</td>
            <td>@Model.Description</td>
            <td>@Model.Price</td>
            <td>@Model.Category</td>
            <td>
                <a class="btn btn-sm btn-danger" asp-controller="Libro" asp-action="Delete" asp-route-id="@Model.Id">Delete</a>
                <a class="btn btn-sm btn-warning" asp-controller="Libro" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
            </td>
        </tr>
    </tbody>
</table>